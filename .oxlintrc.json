{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["oxc", "typescript", "node", "promise", "unicorn"],
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {},
  "rules": {},
  "overrides": [
    {
      "files": ["**/*.test.ts"],
      "rules": {
        "typescript/no-explicit-any": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ],
  "ignorePatterns": [
    "dist/**",
    "coverage/**",
    "src/generated/**",
    "node_modules/**"
  ]
}
